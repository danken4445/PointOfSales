<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logo1"
    android:padding="24dp">

    <TextView
        android:id="@+id/settings_title"
        android:textColor="@color/PrimaryColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Settings"
        android:textSize="64sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/createAccount"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="16dp"
            android:clickable="true"
            app:elevation="12dp"
            android:layout_marginBottom="4dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#969595"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/account_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/create_account" />

                <TextView
                    android:id="@+id/createAccount_text"
                    android:textColor="@color/PrimaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/account_icon"
                    android:layout_marginLeft="16dp"
                    android:text="Create Employee Account"
                    android:textSize="24sp" />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="4dp"

            app:elevation="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="#969595"
                >

                <ImageView
                    android:id="@+id/changePassword_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"

                    android:src="@drawable/change_password" />

                <TextView
                    android:id="@+id/changePassword_text"
                    android:textColor="@color/PrimaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/changePassword_icon"
                    android:layout_marginLeft="16dp"
                    android:text="Change Password"
                    android:textSize="24sp" />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/deleteAccountButton"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:elevation="12dp"
            android:layout_marginBottom="4dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="#969595"
                >

                <ImageView
                    android:id="@+id/delete_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"

                    android:src="@drawable/delete_account" />

                <TextView
                    android:id="@+id/delete_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/delete_icon"
                    android:text="Delete Employee Account"
                    android:textColor="@color/PrimaryColor"
                    android:textSize="24sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/logoutSettingsButton"
            android:clickable="true"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:elevation="12dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="#969595"
                >

                <ImageView
                    android:id="@+id/logout_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"

                    android:src="@drawable/logout2" />

                <TextView
                    android:id="@+id/logout_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/logout_icon"
                    android:text="Log Out"
                    android:textStyle="bold"
                    android:textColor="#D02323"
                    android:textSize="24sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>